<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCFF"
    android:padding="16dp"
    tools:context="com.ekm.hairdo.Stylist.AddressShowActivity">

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView1"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="32sp"
        android:fontFamily="@font/valeraround"
        android:textColor="#cc000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Why we need an address"
       />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/house" />

    <ImageView
        android:id="@+id/imageView34"
        android:layout_width="237dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="384dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/pngwave"
        android:background="#00000ddd"
      />

    <TextView

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        android:id="@+id/textView"
        android:padding="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/indieflower"
        android:textColor="#bb000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addresstext" />

    <Button
        android:background="@drawable/line_message2"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintRight_toRightOf="parent"
      android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/donebuttoninadressact"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue" />

</androidx.constraintlayout.widget.ConstraintLayout>