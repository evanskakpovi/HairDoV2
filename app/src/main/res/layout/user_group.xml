<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Stylist.AddNew">

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/clarrisa" />

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/box"
        app:layout_constraintLeft_toRightOf="@id/profilepic"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
         android:layout_width="0dp"
         android:paddingLeft="8dp"
         android:paddingRight="16dp"
        android:layout_height="wrap_content">
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/time"
        android:id="@+id/profile_name"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Johnson Johnsonhood" />

         <TextView
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:id="@+id/time"
             android:gravity="right"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="8dp"
             android:text="2:50pm" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:paddingRight="8dp"
        android:text="Let's catch up sometimes and work this out together. I don't like to waist timecccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc." />
     </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>